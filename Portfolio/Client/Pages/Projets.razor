@page "/projets"
@using Shared

<h2 class="text-center my-4">Mes projets</h2>

<div class="container">
    <div class="row">
        @foreach (var project in projects)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" @onclick="() => OpenGitHub(project.GitHubUrl)" style="cursor: pointer;">
                    <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

